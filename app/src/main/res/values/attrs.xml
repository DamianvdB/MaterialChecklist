<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Checklist">
        <attr name="text_color" format="color" />
        <attr name="text_size_px" format="reference" />
        <attr name="text_new_item" format="string" />
        <attr name="text_alpha_checked_item" format="float" />
        <attr name="text_alpha_new_item" format="float" />

        <attr name="icon_tint_color" format="color" />
        <attr name="icon_alpha_drag_indicator" format="float" />
        <attr name="icon_alpha_delete" format="float" />
        <attr name="icon_alpha_add" format="float" />

        <attr name="checkbox_tint_color" format="color" />
        <attr name="checkbox_alpha_checked_item" format="float" />

        <attr name="drag_and_drop_enabled" format="boolean" />
        <attr name="drag_and_drop_item_active_background_color" format="color" />
        <attr name="drag_and_drop_item_active_elevation" format="float" />

        <attr name="behavior_checked_item" format="enum">
            <enum name="MOVE_TO_TOP_OF_CHECKED_ITEMS" value="0" />
            <enum name="MOVE_TO_BOTTOM_OF_CHECKED_ITEMS" value="1" />
            <enum name="KEEP_POSITION" value="2" />
            <enum name="DELETE" value="3" />
        </attr>

        <attr name="behavior_unchecked_item" format="enum">
            <enum name="MOVE_TO_PREVIOUS_POSITION" value="0" />
            <enum name="MOVE_TO_BOTTOM_OF_UNCHECKED_ITEMS" value="1" />
            <enum name="MOVE_TO_TOP_OF_UNCHECKED_ITEMS" value="2" />
        </attr>

        <attr name="item_horizontal_padding" format="dimension" />
    </declare-styleable>

</resources>